<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Tools.LogRecord</Title>
    <Version>1.0.0</Version>
    <Authors>QingYi-Studio</Authors>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/QingYi-Studio/CSharp-Library</PackageProjectUrl>
    <RepositoryUrl>https://github.com/QingYi-Studio/CSharp-Library</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Log;Record;Output</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Update="readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
